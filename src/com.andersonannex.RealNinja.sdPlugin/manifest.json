{
	"SDKVersion": 2,
	"Author": "Scott Anderson",
	"CodePath": "app.html",
	"Description": "A simple plugin to query web API's",
	"Name": "Real Ninja",
	"Icon": "actions/template/assets/webapi",
	"URL": "https://www.andersonannex.com",
	"Version": "0.0.1",
	"Software": {
		"MinimumVersion": "5.0"
	},
	"OS": [
		{
			"Platform": "mac",
			"MinimumVersion": "10.11"
		},
		{
			"Platform": "windows",
			"MinimumVersion": "10"
		}
	],
	"Category": "API",
	"CategoryIcon": "actions/template/assets/webapi",
	"Actions": [
		{
			"Icon": "actions/template/assets/webapi",
			"Name": "API Request",
			"Controllers": ["Keypad"],
			"States": [
				{
					"Image": "actions/template/assets/webapi"
				}
			],
			"Tooltip": "This action calls an API and displays a alert or ok depending on the value of the success field.",
			"UUID": "com.andersonannex.realninja.apiaction",
			"PropertyInspectorPath": "actions/template/property-inspector/api-inspector.html"
		},
		{
			"Icon": "actions/template/assets/webapi",
			"Name": "API Text",
			"Controllers": ["Keypad"],
			"States": [
				{
					"Image": "actions/template/assets/webapi"
				}
			],
			"Tooltip": "This action calls an API and displays a text response.",
			"UUID": "com.andersonannex.realninja.apitextaction",
			"PropertyInspectorPath": "actions/template/property-inspector/apitext-inspector.html"
		},
		{
			"Icon": "actions/template/assets/webapi",
			"Name": "API Toggle",
			"Controllers": ["Keypad"],
			"States": [
				{
					"Name": "On",
					"Image": "actions/template/assets/webapi"
				},
				{
					"Name": "Off"
				}
			],
			"Tooltip": "This action calls alternating api endpoints and displays a success or failure icon.",
			"UUID": "com.andersonannex.realninja.apitoggleaction",
			"PropertyInspectorPath": "actions/template/property-inspector/apitoggle-inspector.html"
		}
	]
}
